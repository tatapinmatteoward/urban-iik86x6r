---
const currentYear = new Date().getFullYear();
const socialLinks = [
  { icon: 'fab fa-twitter', url: 'https://twitter.com' },
  { icon: 'fab fa-instagram', url: 'https://instagram.com' },
  { icon: 'fab fa-facebook', url: 'https://facebook.com' },
  { icon: 'fab fa-youtube', url: 'https://youtube.com' }
];
---

<footer class="bg-gray-800 text-white py-8 border-t-2 border-cyan-400">
  <div class="container mx-auto px-4 text-center">
    <p class="text-cyan-400 font-mono text-sm">
      &copy; {currentYear} Urban Board Collective. All rights reserved.
    </p>
    <div class="flex justify-center gap-4 mt-4">
      {socialLinks.map((link) => (
        <a 
          href={link.url} 
          class="text-white hover:text-cyan-400 transition-colors duration-300"
          target="_blank"
          rel="noopener noreferrer"
        >
          <i class={link.icon}></i>
        </a>
      ))}
    </div>
  </div>
</footer>