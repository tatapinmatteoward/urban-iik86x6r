---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const blogPosts = await getCollection('blog');
const sortedPosts = blogPosts.sort((a, b) => 
  new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);
---

<Layout title="Blog" description="Latest articles from Urban Board Collective">
  <div class="container mx-auto px-4 py-16">
    <h1 class="text-5xl font-bold mb-12 text-center" style="color: #2d3748">
      Blog
    </h1>
    
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-7xl mx-auto">
      {sortedPosts.map((post) => (
        <article class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
          <div class="p-6">
            <h2 class="text-2xl font-bold mb-2">
              <a href={`/blog/${post.slug}`} class="hover:text-primary">
                {post.data.title}
              </a>
            </h2>
            <p class="text-gray-600 text-sm mb-4">{post.data.date}</p>
            <p class="text-gray-700 mb-4">{post.data.description}</p>
            <a href={`/blog/${post.slug}`} class="text-primary hover:underline">
              Read More â†’
            </a>
          </div>
        </article>
      ))}
    </div>
  </div>
</Layout>
