---
import Layout from '../layouts/Layout.astro';

const pageTitle = "Videos - Ride the Urban Edge";
const pageDescription = "Dive into the pulse of street skating with Urban Board Collective's video hub. Watch epic tricks, behind-the-scenes action, and community spotlights that capture the raw energy of urban shredding.";

const featuredVideos = [
  {
    title: "Epic Downtown Rail Grind",
    description: "Watch pro skater Jax rip through the city's hidden gems under flickering streetlights. Pure adrenaline in 4K.",
    thumbnail: "rail-grind",
    duration: "5:22"
  },
  {
    title: "Beginner's Guide to Ollie Over Curbs",
    description: "Step-by-step breakdown to level up your basics with real urban flair.",
    thumbnail: "ollie-curbs",
    duration: "8:45"
  },
  {
    title: "Community Throwdown 2023",
    description: "Relive the chaos of our annual skate jam, packed with flips, fails, and fist-pumps.",
    thumbnail: "throwdown-2023",
    duration: "12:17"
  }
];

const videoCategories = [
  { name: "Trick Tutorial", icon: "fa-fist-raised" },
  { name: "Street Sessions", icon: "fa-city" },
  { name: "Pro Interviews", icon: "fa-headset" },
  { name: "Behind the Scenes", icon: "fa-camera" }
];
---

<Layout title={pageTitle} description={pageDescription}>
  <div class="relative min-h-screen">
    <!-- Hero Section -->
    <div class="relative bg-gradient-to-r from-gray-900 to-primary py-24 overflow-hidden">
      <div class="absolute inset-0 opacity-20">
        <div class="absolute top-0 left-0 w-full h-full bg-[radial-gradient(circle_at_50%_50%,rgba(0,245,255,0.1)_1px,transparent_1px)] bg-[length:50px_50px]"></div>
      </div>
      
      <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-3xl mx-auto text-center">
          <h1 class="text-5xl md:text-7xl font-bold text-white mb-6 tracking-tight">
            <span class="text-accent">Shred</span> the Screen
          </h1>
          <p class="text-xl md:text-2xl text-gray-300 mb-8 font-light">
            Urban Board Collective Videos
          </p>
          <p class="text-lg text-gray-400 max-w-2xl mx-auto">
            Dive into the pulse of street skating with videos that capture the raw energy of urban shredding
          </p>
        </div>
      </div>
      
      <div class="absolute bottom-0 left-0 right-0 h-16 bg-gradient-to-t from-gray-900 to-transparent"></div>
    </div>

    <!-- Featured Videos Section -->
    <section class="py-16 bg-gray-900">
      <div class="container mx-auto px-4">
        <div class="flex items-center justify-between mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-white">
            Featured Videos
          </h2>
          <div class="flex space-x-2">
            <button class="px-4 py-2 bg-primary hover:bg-accent transition-all duration-300 text-white font-bold rounded-lg">
              All Videos
            </button>
          </div>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {featuredVideos.map((video, index) => (
            <div 
              key={index}
              class="group relative bg-gray-800 rounded-xl overflow-hidden shadow-2xl transform transition-all duration-500 hover:-translate-y-2 hover:shadow-accent/30"
            >
              <div class="relative">
                <div class="bg-gradient-to-br from-primary to-accent h-48 flex items-center justify-center">
                  <div class="bg-black bg-opacity-30 rounded-full w-16 h-16 flex items-center justify-center border-2 border-white">
                    <i class="fas fa-play text-white text-2xl"></i>
                  </div>
                </div>
                <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black to-transparent p-4">
                  <span class="text-white font-bold">{video.duration}</span>
                </div>
              </div>
              
              <div class="p-5">
                <h3 class="text-xl font-bold text-white mb-2 group-hover:text-accent transition-colors">
                  {video.title}
                </h3>
                <p class="text-gray-400 text-sm">
                  {video.description}
                </p>
              </div>
              
              <div class="absolute inset-0 bg-gradient-to-t from-primary/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Video Categories -->
    <section class="py-16 bg-gradient-to-b from-gray-900 to-black">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-12 text-center">
          Browse by Category
        </h2>
        
        <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
          {videoCategories.map((category, index) => (
            <div 
              key={index}
              class="bg-gray-800 rounded-xl p-6 text-center transform transition-all duration-300 hover:-translate-y-2 hover:bg-primary/10 group cursor-pointer"
            >
              <div class="w-16 h-16 bg-primary/20 rounded-full flex items-center justify-center mx-auto mb-4 group-hover:bg-accent/30 transition-colors">
                <i class={`fas ${category.icon} text-2xl text-white`}></i>
              </div>
              <h3 class="text-lg font-bold text-white group-hover:text-accent transition-colors">
                {category.name}
              </h3>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Video Spotlight -->
    <section class="py-16 bg-black">
      <div class="container mx-auto px-4">
        <div class="flex flex-col md:flex-row items-center gap-12">
          <div class="md:w-1/2">
            <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">
              <span class="text-accent">Urban</span> Edge Video Spotlight
            </h2>
            <p class="text-gray-300 text-lg mb-6">
              Our latest content features the most innovative tricks, locations, and personalities shaping the street skating scene. From underground sessions to professional competitions, we bring you the stories that matter.
            </p>
            <div class="flex flex-wrap gap-4">
              <button class="px-6 py-3 bg-accent hover:bg-white text-black font-bold rounded-lg transition-all duration-300 transform hover:scale-105">
                Watch Latest
              </button>
              <button class="px-6 py-3 border-2 border-accent text-accent hover:bg-accent hover:text-white font-bold rounded-lg transition-all duration-300">
                Subscribe
              </button>
            </div>
          </div>
          
          <div class="md:w-1/2 relative">
            <div class="relative rounded-xl overflow-hidden shadow-2xl">
              <div class="bg-gradient-to-br from-primary to-accent h-80 flex items-center justify-center">
                <div class="bg-black bg-opacity-30 rounded-full w-24 h-24 flex items-center justify-center border-4 border-white">
                  <i class="fas fa-play text-white text-3xl"></i>
                </div>
              </div>
              <div class="absolute inset-0 bg-gradient-to-t from-black/80 to-transparent"></div>
              <div class="absolute bottom-0 left-0 right-0 p-6">
                <h3 class="text-2xl font-bold text-white">Urban Revolution: The Evolution of Street Culture</h3>
                <p class="text-gray-300 mt-2">An exclusive look at how skateboarding shaped modern urban art and lifestyle</p>
              </div>
            </div>
            
            <div class="absolute -top-4 -right-4 w-32 h-32 bg-accent rounded-full opacity-20 blur-xl"></div>
            <div class="absolute -bottom-4 -left-4 w-48 h-48 bg-primary rounded-full opacity-20 blur-xl"></div>
          </div>
        </div>
      </div>
    </section>

    <!-- Stats Section -->
    <section class="py-16 bg-gradient-to-r from-primary to-accent">
      <div class="container mx-auto px-4">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
          <div>
            <div class="text-4xl md:text-5xl font-bold text-white mb-2">240+</div>
            <div class="text-gray-200">Videos Published</div>
          </div>
          <div>
            <div class="text-4xl md:text-5xl font-bold text-white mb-2">1.2M</div>
            <div class="text-gray-200">Views</div>
          </div>
          <div>
            <div class="text-4xl md:text-5xl font-bold text-white mb-2">420K</div>
            <div class="text-gray-200">Subscribers</div>
          </div>
          <div>
            <div class="text-4xl md:text-5xl font-bold text-white mb-2">87%</div>
            <div class="text-gray-200">Engagement Rate</div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-20 bg-black">
      <div class="container mx-auto px-4 text-center">
        <h2 class="text-3xl md:text-5xl font-bold text-white mb-6">
          Ready to <span class="text-accent">Ride the Urban Edge</span>?
        </h2>
        <p class="text-xl text-gray-300 max-w-2xl mx-auto mb-10">
          Join our community of street skaters and get exclusive access to behind-the-scenes content and early releases.
        </p>
        <div class="flex flex-col sm:flex-row justify-center gap-4">
          <button class="px-8 py-4 bg-accent hover:bg-white text-black font-bold rounded-lg text-lg transition-all duration-300 transform hover:scale-105">
            Join Our Discord
          </button>
          <button class="px-8 py-4 border-2 border-accent text-accent hover:bg-accent hover:text-white font-bold rounded-lg text-lg transition-all duration-300">
            Subscribe to Videos
          </button>
        </div>
      </div>
    </section>
  </div>
</Layout>

<style>
  @keyframes pulse {
    0% { box-shadow: 0 0 0 0 rgba(0, 245, 255, 0.4); }
    70% { box-shadow: 0 0 0 10px rgba(0, 245, 255, 0); }
    100% { box-shadow: 0 0 0 0 rgba(0, 245, 255, 0); }
  }
  
  .animate-pulse-neon {
    animation: pulse 2s infinite;
  }
  
  .video-card-hover {
    transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  }
  
  .video-card-hover:hover {
    transform: translateY(-10px) scale(1.02);
  }
</style>