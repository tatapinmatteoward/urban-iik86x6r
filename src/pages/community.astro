---
import Layout from '../layouts/Layout.astro';

const pageTitle = "Community Hub: Ride Together";
const pageDescription = "Dive into the heart of urban skating with our vibrant community. Connect, share tricks, join events, and fuel your street passion among like-minded riders.";

const features = [
  {
    title: "Share Your Shreds",
    description: "Post your latest clips, setups, and urban adventures in our forums. Get feedback from pros and noobs alike.",
    icon: "fa-camera"
  },
  {
    title: "Live Events & Meetups",
    description: "From pop-up skate sessions to neon-lit night rides, stay plugged into local and global happenings.",
    icon: "fa-calendar"
  },
  {
    title: "Skill-Building Resources",
    description: "Access tutorials, gear swaps, and insider tips to level up your game.",
    icon: "fa-graduation-cap"
  },
  {
    title: "Support the Scene",
    description: "Connect with brands, artists, and activists keeping street culture alive.",
    icon: "fa-heart"
  }
];

const upcomingEvents = [
  {
    title: "Neon Night Ride",
    date: "Sat, Jun 15",
    location: "Downtown District",
    description: "Join us for an epic night skate through the illuminated streets"
  },
  {
    title: "Local Skater Meetup",
    date: "Sun, Jun 23",
    location: "Rooftop Skate Park",
    description: "Connect with local riders and share your favorite spots"
  },
  {
    title: "Skill Share Workshop",
    date: "Wed, Jun 26",
    location: "Urban Collective Studio",
    description: "Learn new tricks from experienced street skaters"
  }
];

const testimonials = [
  {
    name: "Zara K.",
    quote: "This community transformed my skating. The mentorship program helped me land my first 50-50!",
    role: "Professional Rider"
  },
  {
    name: "Marcus T.",
    quote: "I've met my best friends here. The events are always epic and the culture is real.",
    role: "Community Organizer"
  },
  {
    name: "Jasmine L.",
    quote: "The gear swap events saved me hundreds while getting quality equipment. Pure gold!",
    role: "Gear Enthusiast"
  }
];
---

<Layout title={pageTitle} description={pageDescription}>
  <!-- Hero Section -->
  <section class="relative py-24 overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-r from-primary to-accent opacity-20"></div>
    <div class="relative container mx-auto px-4 text-center">
      <div class="inline-block px-6 py-2 mb-4 bg-accent text-primary font-bold rounded-full animate-pulse">
        <i class="fas fa-bolt mr-2"></i>JOIN THE MOVEMENT
      </div>
      <h1 class="text-5xl md:text-7xl font-bold text-white mb-6 tracking-tight">
        Community Hub: <span class="text-accent">Ride Together</span>
      </h1>
      <p class="text-xl md:text-2xl text-gray-200 max-w-3xl mx-auto mb-10">
        Dive into the heart of urban skating with our vibrant community. Connect, share tricks, join events, and fuel your street passion among like-minded riders.
      </p>
      <div class="flex flex-col sm:flex-row justify-center gap-4">
        <button class="px-8 py-4 bg-accent text-primary font-bold rounded-lg hover:bg-white transition-all duration-300 transform hover:scale-105 shadow-lg shadow-accent/30">
          Join the Collective
        </button>
        <button class="px-8 py-4 bg-transparent border-2 border-accent text-white font-bold rounded-lg hover:bg-accent/20 transition-all duration-300">
          Explore Events
        </button>
      </div>
    </div>
    
    <!-- Animated Neon Grid -->
    <div class="absolute inset-0 opacity-30">
      <div class="grid grid-cols-12 gap-4 h-full">
        {Array.from({ length: 144 }).map((_, i) => (
          <div class="border border-accent animate-pulse" style={{ animationDelay: `${i * 0.05}s` }}></div>
        ))}
      </div>
    </div>
  </section>

  <!-- Why Join Section -->
  <section class="py-20 bg-gradient-to-b from-primary to-gray-900">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold text-white mb-6">
          Ride the Urban <span class="text-accent">Edge</span> with Us
        </h2>
        <p class="text-xl text-gray-300 max-w-3xl mx-auto">
          <strong>Urban Board Collective</strong> is more than just news and reviewsâ€”it's your launchpad into a thriving community of street skaters pushing boundaries in the neon-lit concrete jungle.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {features.map((feature, index) => (
          <div 
            key={index} 
            class="bg-gray-800/50 backdrop-blur-sm border border-accent/30 rounded-xl p-6 hover:border-accent/70 transition-all duration-500 hover:scale-[1.03] group"
          >
            <div class="w-16 h-16 rounded-full bg-accent/10 flex items-center justify-center mb-6 group-hover:bg-accent/20 transition-colors duration-300">
              <i class={`fas ${feature.icon} text-2xl text-accent`}></i>
            </div>
            <h3 class="text-xl font-bold text-white mb-3">{feature.title}</h3>
            <p class="text-gray-300">{feature.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Events Section -->
  <section class="py-20 bg-gradient-to-r from-gray-900 to-primary">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold text-white mb-6">
          Upcoming <span class="text-accent">Events</span>
        </h2>
        <p class="text-xl text-gray-300 max-w-3xl mx-auto">
          Stay connected with the pulse of the skate scene through our dynamic calendar
        </p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        {upcomingEvents.map((event, index) => (
          <div 
            key={index} 
            class="bg-gray-800/50 backdrop-blur-sm border border-accent/30 rounded-xl overflow-hidden hover:border-accent/70 transition-all duration-500 group"
          >
            <div class="h-48 bg-gradient-to-r from-accent to-cyan-500 relative">
              <div class="absolute top-4 right-4 bg-black/70 text-white px-3 py-1 rounded-full text-sm">
                {event.date}
              </div>
            </div>
            <div class="p-6">
              <h3 class="text-2xl font-bold text-white mb-3">{event.title}</h3>
              <div class="flex items-center text-gray-300 mb-3">
                <i class="fas fa-map-marker-alt mr-2 text-accent"></i>
                <span>{event.location}</span>
              </div>
              <p class="text-gray-300 mb-4">{event.description}</p>
              <button class="w-full py-3 bg-accent text-primary font-bold rounded-lg hover:bg-white transition-colors duration-300">
                Register Now
              </button>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Testimonials -->
  <section class="py-20 bg-gradient-to-b from-primary to-gray-900">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold text-white mb-6">
          What Our <span class="text-accent">Riders</span> Say
        </h2>
        <p class="text-xl text-gray-300 max-w-3xl mx-auto">
          Real experiences from real urban athletes in the collective
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {testimonials.map((testimonial, index) => (
          <div 
            key={index} 
            class="bg-gradient-to-br from-gray-800/50 to-gray-900 border border-accent/30 rounded-xl p-8 hover:border-accent/70 transition-all duration-500"
          >
            <div class="flex items-center mb-6">
              <div class="w-16 h-16 rounded-full bg-gradient-to-r from-accent to-cyan-400 flex items-center justify-center text-white font-bold text-xl mr-4">
                {testimonial.name.charAt(0)}
              </div>
              <div>
                <h4 class="text-white font-bold text-lg">{testimonial.name}</h4>
                <p class="text-accent">{testimonial.role}</p>
              </div>
            </div>
            <p class="text-gray-300 italic">"{testimonial.quote}"</p>
            <div class="flex mt-4">
              {[...Array(5)].map((_, i) => (
                <i key={i} class="fas fa-star text-yellow-400"></i>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-gradient-to-r from-accent to-cyan-500">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-4xl md:text-5xl font-bold text-primary mb-6">
        Ready to Join the <span class="text-white">Movement</span>?
      </h2>
      <p class="text-xl text-primary max-w-3xl mx-auto mb-10">
        Become part of the most vibrant community for street skaters. Share, learn, and grow with riders from around the world.
      </p>
      <div class="flex flex-col sm:flex-row justify-center gap-4">
        <button class="px-8 py-4 bg-primary text-accent font-bold rounded-lg hover:bg-white transition-all duration-300 transform hover:scale-105 shadow-lg shadow-primary/30">
          Create Your Profile
        </button>
        <button class="px-8 py-4 bg-transparent border-2 border-primary text-primary font-bold rounded-lg hover:bg-primary/20 transition-all duration-300">
          Learn More
        </button>
      </div>
    </div>
  </section>
</Layout>

<style>
  @keyframes float {
    0% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
    100% { transform: translateY(0px); }
  }

  .animate-float {
    animation: float 3s ease-in-out infinite;
  }
  
  .neon-border {
    box-shadow: 0 0 15px rgba(0, 245, 255, 0.5);
  }

  .neon-pulse {
    animation: neonPulse 2s infinite;
  }

  @keyframes neonPulse {
    0% { box-shadow: 0 0 5px rgba(0, 245, 255, 0.5); }
    50% { box-shadow: 0 0 20px rgba(0, 245, 255, 0.8), 0 0 30px rgba(0, 245, 255, 0.4); }
    100% { box-shadow: 0 0 5px rgba(0, 245, 255, 0.5); }
  }

  .event-card:hover {
    transform: translateY(-5px);
    transition: all 0.3s ease;
  }
</style>